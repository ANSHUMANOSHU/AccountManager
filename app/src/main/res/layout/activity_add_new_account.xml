<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="5dp"
    tools:context=".AddNewAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:text="Stamp    : \n"
                android:textColor="@color/colorAccent"
                android:typeface="monospace"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/newtimeStamp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:text="X X X 20/2/20 X X X"
                android:typeface="monospace"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center_vertical"
                android:text="Website  :"
                android:textColor="@color/colorAccent"
                android:typeface="monospace"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/newwebsite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:hint="website name"
                android:textSize="16sp"
                android:typeface="monospace"
                tools:ignore="Autofill,HardcodedText"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center_vertical"
                android:text="Address ( Url )  : "
                android:textColor="@color/colorAccent"
                android:typeface="monospace"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/newurl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:textSize="16sp"
                android:typeface="monospace"
                android:inputType="text"
                tools:ignore="Autofill,LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center_vertical"
                android:text="Username : "
                android:textColor="@color/colorAccent"
                android:typeface="monospace"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/newusername"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:textSize="16sp"
                android:typeface="monospace"
                android:inputType="text"
                tools:ignore="Autofill,LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center_vertical"
                android:text="Password : "
                android:textColor="@color/colorAccent"
                android:typeface="monospace"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/newpassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="64"
                android:textSize="16sp"
                android:typeface="monospace"
                android:inputType="textPassword"
                tools:ignore="Autofill,LabelFor,TextFields" />


            <ImageView
                android:src="@drawable/setting"
                android:onClick="passwordSuggestionClicked"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:text="\nNotes    : "
                android:textColor="@color/colorAccent"
                android:typeface="monospace"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/newnotes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:gravity="start"
                android:hint="start here"
                android:lines="5"
                android:textSize="16sp"
                android:typeface="monospace"
                tools:ignore="Autofill,HardcodedText,TextFields" />

        </LinearLayout>

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:id="@+id/save"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:onClick="saveClicked"
            android:text="S A V E"
            android:textSize="20sp"
            tools:ignore="ButtonStyle,HardcodedText" />


    </LinearLayout>

</LinearLayout>