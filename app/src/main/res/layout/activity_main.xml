<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_general"
    android:orientation="vertical"
    android:padding="1dp"
    tools:context=".MainActivity">

    <!--TOP LAYOUT-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="90"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/saved_accounts_details"
            android:textColor="@color/textcolor_general"
            android:textSize="16sp"
            android:typeface="monospace" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:contentDescription="@string/add_new_account"
            android:src="@drawable/ic_add_circle_black_24dp" />

    </LinearLayout>

    <!--RECYCLER VIEW-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSavedPasswords"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:padding="1dp" />

</LinearLayout>